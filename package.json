{
  "name": "stylelint-formatter-github",
  "version": "0.2.0",
  "description": "See stylelint errors and warnings directly in pull requests",
  "license": "MIT",
  "repository": "hipstersmoothie/stylelint-formatter-github",
  "main": "dist/index.js",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts,.js",
    "release": "auto shipit",
    "lint:example": "stylelint example/test.css --custom-formatter=./dist/index.js"
  },
  "keywords": [
    "stylelint",
    "stylelint-formatter",
    "formatter",
    "reporter",
    "lint",
    "validate",
    "github",
    "annotations",
    "checks"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "stylelint": ">= 10"
  },
  "dependencies": {
    "@octokit/rest": "^16.28.7",
    "create-check": "^0.2.2",
    "stylelint-formatter-pretty": "^1.1.2"
  },
  "devDependencies": {
    "@types/eslint": "^4.16.8",
    "@types/stylelint": "^9.10.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "auto": "^7.3.2",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^15.8.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "strip-ansi": "^5.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "typescript": "^3.5.3"
  },
  "ava": {
    "serial": true
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "auto": {
    "plugins": [
      "npm",
      "released"
    ]
  }
}
